{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": [
      "es2020",
    ],
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "./src/*"
      ],
      "@controllers/*": [
        "./src/controllers/*"
      ],
      "@models/*": [
        "src/services/*"
      ],
      "@middlewares/*": [
        "./src/middlewares/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@routes": [
        "./src/routes/index.ts"
      ],
      "@errors/*": [
        "./src/errors/*"
      ],
      "@validators": [
        "./src/validators/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
  ]
}